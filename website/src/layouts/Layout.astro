---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="ka">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="FluentGe — ინგლისური ენის შესწავლა ქართველებისთვის. ფლეშბარათები, გრამატიკა, პოდკასტი." />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-[#0f172a] text-[#f8fafc] font-[Inter,system-ui,sans-serif] min-h-screen">
    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 bg-[#0f172a]/90 backdrop-blur-md border-b border-white/10">
      <div class="max-w-5xl mx-auto px-4 py-3 flex items-center justify-between">
        <a href="/" class="text-xl font-bold">
          <span class="text-[#22c55e]">Fluent</span>Ge
        </a>
        <div class="flex items-center gap-6 text-sm">
          <a href="/" class="hover:text-[#22c55e] transition-colors">მთავარი</a>
          <a href="/flashcards/" class="hover:text-[#22c55e] transition-colors">ბარათები</a>
          <a href="#" class="text-[#94a3b8] cursor-not-allowed">გრამატიკა</a>
          <a href="/about/" class="hover:text-[#22c55e] transition-colors">ჩვენ შესახებ</a>
        </div>
      </div>
    </nav>

    <main class="pt-14">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-white/10 mt-20">
      <div class="max-w-5xl mx-auto px-4 py-10 text-center text-[#94a3b8] text-sm">
        <div class="mb-4">
          <span class="text-white font-bold"><span class="text-[#22c55e]">Fluent</span>Ge</span>
        </div>
        <div class="flex justify-center gap-6 mb-4">
          <a href="/" class="hover:text-white transition-colors">მთავარი</a>
          <a href="/flashcards/" class="hover:text-white transition-colors">ბარათები</a>
          <a href="/about/" class="hover:text-white transition-colors">ჩვენ შესახებ</a>
        </div>
        <p>© 2026 FluentGe. ყველა უფლება დაცულია.</p>
      </div>
    </footer>
  </body>
</html>
