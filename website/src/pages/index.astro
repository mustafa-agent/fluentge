---
import Layout from '../layouts/Layout.astro';
const wordsOfDay = [
  { en: "Accomplish", ka: "მიღწევა", pron: "/əˈkɑːmplɪʃ/", example: "She accomplished her goal.", exampleKa: "მან მიზანს მიაღწია." },
  { en: "Resilient", ka: "გამძლე", pron: "/rɪˈzɪliənt/", example: "Children are very resilient.", exampleKa: "ბავშვები ძალიან გამძლეები არიან." },
  { en: "Opportunity", ka: "შესაძლებლობა", pron: "/ˌɑːpərˈtuːnəti/", example: "This is a great opportunity.", exampleKa: "ეს შესანიშნავი შესაძლებლობაა." },
  { en: "Knowledge", ka: "ცოდნა", pron: "/ˈnɑːlɪdʒ/", example: "Knowledge is power.", exampleKa: "ცოდნა ძალაა." },
  { en: "Curious", ka: "ცნობისმოყვარე", pron: "/ˈkjʊriəs/", example: "She is curious about science.", exampleKa: "ის ცნობისმოყვარეა მეცნიერებით." },
  { en: "Grateful", ka: "მადლიერი", pron: "/ˈɡreɪtfəl/", example: "I'm grateful for your help.", exampleKa: "მადლიერი ვარ შენი დახმარებისთვის." },
  { en: "Persevere", ka: "დაჟინება", pron: "/ˌpɜːrsəˈvɪr/", example: "You must persevere.", exampleKa: "დაჟინება გჭირდება." },
];
const dayOfYear = Math.floor((Date.now() - new Date(new Date().getFullYear(), 0, 0).getTime()) / 86400000);
const todayWord = wordsOfDay[dayOfYear % wordsOfDay.length];
---

<Layout title="FluentGe — ისწავლე ინგლისური ქართულად">
  <!-- Hero -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0">
      <img src="https://images.unsplash.com/photo-1481627834876-b7833e8f5570?w=1400&q=80" alt="" class="w-full h-full object-cover opacity-30"/>
      <div class="absolute inset-0 bg-gradient-to-b from-[#1C1C1E]/80 to-[#1C1C1E]"></div>
    </div>
    <div class="relative max-w-3xl mx-auto px-4 pt-28 pb-24 sm:pt-36 sm:pb-32 text-center">
      <h1 class="font-['Playfair_Display',serif] text-3xl sm:text-5xl md:text-6xl mb-5 leading-tight">
        ისწავლე ინგლისური<br/><span class="text-[#C8C8C0]">მარტივად</span>
      </h1>
      <p class="text-base sm:text-lg text-[#A0A09A] mb-8 max-w-xl mx-auto">
        ფლეშბარათები, გრამატიკა, პოდკასტი და თამაშები — ყველაფერი ერთ ადგილას.
      </p>
      <div class="flex flex-wrap justify-center gap-2 mb-8 text-xs">
        <span class="bg-white/10 border border-white/10 text-[#C8C8C0] px-3 py-1 rounded-full">2400+ სიტყვა</span>
        <span class="bg-white/10 border border-white/10 text-[#C8C8C0] px-3 py-1 rounded-full">40 კატეგორია</span>
        <span class="bg-white/10 border border-white/10 text-[#C8C8C0] px-3 py-1 rounded-full">30 თამაში</span>
      </div>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/flashcards/" class="bg-white text-[#1C1C1E] font-semibold px-8 py-3.5 rounded-xl text-base hover:bg-[#E8E8E0] transition-colors">დაიწყე სწავლა</a>
        <a href="/about/" class="bg-white/10 border border-white/10 font-semibold px-8 py-3.5 rounded-xl text-base hover:bg-white/20 transition-colors">გაიგე მეტი</a>
      </div>
    </div>
  </section>

  <!-- Word of the Day -->
  <section class="px-4 py-10 max-w-2xl mx-auto">
    <div class="bg-[#242426] border border-[#2E2E30] rounded-2xl p-6 text-center">
      <p class="text-xs text-[#6B6B65] uppercase tracking-wider mb-2">დღის სიტყვა</p>
      <h3 class="font-['Playfair_Display',serif] text-3xl text-white mb-1">{todayWord.en}</h3>
      <p class="text-[#6B6B65] text-sm mb-1">{todayWord.pron}</p>
      <p class="text-lg text-[#C8C8C0] mb-3">{todayWord.ka}</p>
      <div class="bg-[#1C1C1E] rounded-xl p-3 text-sm">
        <p class="text-[#A0A09A]">"{todayWord.example}"</p>
        <p class="text-[#6B6B65] mt-1">{todayWord.exampleKa}</p>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="px-4 py-16 max-w-5xl mx-auto">
    <h2 class="font-['Playfair_Display',serif] text-2xl sm:text-3xl text-center mb-12">რას გთავაზობთ</h2>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
      <a href="/flashcards/" class="group bg-[#242426] border border-[#2E2E30] rounded-2xl overflow-hidden hover:border-[#404040] transition-all">
        <div class="h-36 overflow-hidden"><img src="https://images.unsplash.com/photo-1456513080510-7bf3a84b82f8?w=400&q=60" alt="" class="w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-105 transition-all duration-500"/></div>
        <div class="p-5"><h3 class="font-bold text-base mb-1">ფლეშბარათები</h3><p class="text-[#6B6B65] text-sm">2400+ სიტყვა 40 კატეგორიაში.</p><span class="inline-block mt-3 text-[#C8C8C0] text-sm font-medium group-hover:translate-x-1 transition-transform">დაიწყე &rarr;</span></div>
      </a>
      <a href="/grammar/" class="group bg-[#242426] border border-[#2E2E30] rounded-2xl overflow-hidden hover:border-[#404040] transition-all">
        <div class="h-36 overflow-hidden"><img src="https://images.unsplash.com/photo-1471107340929-a87cd0f5b5f3?w=400&q=60" alt="" class="w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-105 transition-all duration-500"/></div>
        <div class="p-5"><h3 class="font-bold text-base mb-1">გრამატიკა</h3><p class="text-[#6B6B65] text-sm">38 გაკვეთილი A1-დან B2-მდე.</p><span class="inline-block mt-3 text-[#C8C8C0] text-sm font-medium group-hover:translate-x-1 transition-transform">დაიწყე &rarr;</span></div>
      </a>
      <a href="/podcast/" class="group bg-[#242426] border border-[#2E2E30] rounded-2xl overflow-hidden hover:border-[#404040] transition-all">
        <div class="h-36 overflow-hidden"><img src="https://images.unsplash.com/photo-1478737270239-2f02b77fc618?w=400&q=60" alt="" class="w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-105 transition-all duration-500"/></div>
        <div class="p-5"><h3 class="font-bold text-base mb-1">პოდკასტი</h3><p class="text-[#6B6B65] text-sm">21 ეპიზოდი რეალური დიალოგებით.</p><span class="inline-block mt-3 text-[#C8C8C0] text-sm font-medium group-hover:translate-x-1 transition-transform">მოისმინე &rarr;</span></div>
      </a>
      <a href="/phrases/" class="group bg-[#242426] border border-[#2E2E30] rounded-2xl overflow-hidden hover:border-[#404040] transition-all">
        <div class="h-36 overflow-hidden"><img src="https://images.unsplash.com/photo-1543165796-5426273eaab3?w=400&q=60" alt="" class="w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-105 transition-all duration-500"/></div>
        <div class="p-5"><h3 class="font-bold text-base mb-1">ფრაზები</h3><p class="text-[#6B6B65] text-sm">60+ ფრაზა 10 სიტუაციისთვის.</p><span class="inline-block mt-3 text-[#C8C8C0] text-sm font-medium group-hover:translate-x-1 transition-transform">ნახე &rarr;</span></div>
      </a>
      <a href="/games/" class="group bg-[#242426] border border-[#2E2E30] rounded-2xl overflow-hidden hover:border-[#404040] transition-all">
        <div class="h-36 overflow-hidden"><img src="https://images.unsplash.com/photo-1606326608606-aa0b62935f2b?w=400&q=60" alt="" class="w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-105 transition-all duration-500"/></div>
        <div class="p-5"><h3 class="font-bold text-base mb-1">თამაშები</h3><p class="text-[#6B6B65] text-sm">30 ინტერაქტიული თამაში.</p><span class="inline-block mt-3 text-[#C8C8C0] text-sm font-medium group-hover:translate-x-1 transition-transform">ითამაშე &rarr;</span></div>
      </a>
    </div>
  </section>

  <!-- CTA -->
  <section class="px-4 py-16 text-center">
    <div class="bg-[#242426] border border-[#2E2E30] rounded-3xl p-10 sm:p-14 max-w-2xl mx-auto">
      <h2 class="font-['Playfair_Display',serif] text-2xl sm:text-3xl mb-4">მზად ხარ?</h2>
      <p class="text-[#6B6B65] mb-6 text-sm sm:text-base">2400+ სიტყვა, 21 პოდკასტი, 30 თამაში — უფასოდ.</p>
      <a href="/flashcards/" class="bg-white text-[#1C1C1E] font-semibold px-8 py-3.5 rounded-xl text-base hover:bg-[#E8E8E0] transition-colors inline-block">დაიწყე სწავლა</a>
    </div>
  </section>
</Layout>
