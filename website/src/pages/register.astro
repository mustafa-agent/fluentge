---
import Layout from '../layouts/Layout.astro';
---

<Layout title="рЃарЃћрЃњрЃўрЃАрЃбрЃарЃљрЃфрЃўрЃљ Рђћ FluentGe">
  <section class="px-4 py-20 max-w-md mx-auto">
    <div class="text-center mb-10">
      <div class="text-5xl mb-4">­ЪјЊ</div>
      <h1 class="text-3xl font-extrabold mb-3">рЃерЃћрЃЦрЃЏрЃћрЃюрЃў рЃљрЃюрЃњрЃљрЃарЃўрЃерЃў</h1>
      <p class="text-[#94a3b8]">рЃЊрЃљрЃарЃћрЃњрЃўрЃАрЃбрЃарЃўрЃарЃЊрЃў рЃЊрЃљ рЃЏрЃўрЃўрЃдрЃћ рЃгрЃЋрЃЊрЃЮрЃЏрЃљ рЃАрЃарЃБрЃџ рЃЎрЃБрЃарЃАрЃќрЃћ</p>
    </div>

    <div class="bg-[#1e293b] rounded-2xl p-8">
      <form id="registerForm" class="space-y-5">
        <div>
          <label class="block text-sm font-medium mb-1.5">рЃАрЃљрЃ«рЃћрЃџрЃў</label>
          <input type="text" name="name" required placeholder="рЃерЃћрЃюрЃў рЃАрЃљрЃ«рЃћрЃџрЃў"
            class="w-full bg-[#0f172a] border border-white/10 rounded-xl px-4 py-3 text-white placeholder-[#64748b] focus:outline-none focus:border-[#22c55e] transition-colors" />
        </div>
        <div>
          <label class="block text-sm font-medium mb-1.5">рЃћрЃџ. рЃцрЃЮрЃАрЃбрЃљ</label>
          <input type="email" name="email" required placeholder="example@gmail.com"
            class="w-full bg-[#0f172a] border border-white/10 rounded-xl px-4 py-3 text-white placeholder-[#64748b] focus:outline-none focus:border-[#22c55e] transition-colors" />
        </div>
        <div>
          <label class="block text-sm font-medium mb-1.5">рЃърЃљрЃарЃЮрЃџрЃў</label>
          <input type="password" name="password" required placeholder="рЃЏрЃўрЃюрЃўрЃЏрЃБрЃЏ 6 рЃАрЃўрЃЏрЃЉрЃЮрЃџрЃЮ"
            class="w-full bg-[#0f172a] border border-white/10 rounded-xl px-4 py-3 text-white placeholder-[#64748b] focus:outline-none focus:border-[#22c55e] transition-colors" />
        </div>

        <button type="submit"
          class="w-full bg-[#22c55e] hover:bg-[#16a34a] text-white font-bold py-3.5 rounded-xl text-lg transition-colors">
          рЃарЃћрЃњрЃўрЃАрЃбрЃарЃљрЃфрЃўрЃљ
        </button>
      </form>

      <p class="text-center text-[#94a3b8] text-sm mt-6">
        рЃБрЃЎрЃЋрЃћ рЃњрЃљрЃЦрЃЋрЃА рЃљрЃюрЃњрЃљрЃарЃўрЃерЃў? <a href="/login/" class="text-[#22c55e] hover:underline">рЃерЃћрЃАрЃЋрЃџрЃљ</a>
      </p>
    </div>

    <!-- Pricing info -->
    <div class="mt-10 bg-[#1e293b] rounded-2xl p-8 text-center">
      <h2 class="text-xl font-bold mb-4">­Ъњј рЃърЃарЃћрЃЏрЃўрЃБрЃЏ рЃЎрЃБрЃарЃАрЃў</h2>
      <div class="flex justify-center gap-4 mb-6">
        <div class="bg-[#0f172a] rounded-xl p-4 flex-1">
          <div class="text-2xl font-bold text-[#22c55e]">9.99 РѓЙ</div>
          <div class="text-[#94a3b8] text-sm">рЃЌрЃЋрЃћрЃерЃў</div>
        </div>
        <div class="bg-[#0f172a] rounded-xl p-4 flex-1 border border-[#22c55e]">
          <div class="text-2xl font-bold text-[#22c55e]">79.99 РѓЙ</div>
          <div class="text-[#94a3b8] text-sm">рЃгрЃћрЃџрЃўрЃгрЃљрЃЊрЃерЃў</div>
          <div class="text-[#22c55e] text-xs font-semibold mt-1">рЃЊрЃљрЃќрЃЮрЃњрЃћ 33%</div>
        </div>
      </div>
      <ul class="text-left text-sm space-y-2 text-[#94a3b8]">
        <li class="flex gap-2"><span class="text-[#22c55e]">РюЊ</span> 1000+ рЃўрЃюрЃњрЃџрЃўрЃАрЃБрЃарЃў рЃАрЃўрЃбрЃДрЃЋрЃљ</li>
        <li class="flex gap-2"><span class="text-[#22c55e]">РюЊ</span> 30 рЃњрЃарЃљрЃЏрЃљрЃбрЃўрЃЎрЃўрЃА рЃњрЃљрЃЎрЃЋрЃћрЃЌрЃўрЃџрЃў</li>
        <li class="flex gap-2"><span class="text-[#22c55e]">РюЊ</span> рЃљрЃБрЃЊрЃўрЃЮ рЃърЃЮрЃЊрЃЎрЃљрЃАрЃбрЃў</li>
        <li class="flex gap-2"><span class="text-[#22c55e]">РюЊ</span> рЃўрЃюрЃбрЃћрЃарЃљрЃЦрЃбрЃўрЃБрЃџрЃў рЃАрЃљрЃЋрЃљрЃарЃ»рЃўрЃерЃЮрЃћрЃЉрЃў</li>
        <li class="flex gap-2"><span class="text-[#22c55e]">РюЊ</span> рЃърЃарЃЮрЃњрЃарЃћрЃАрЃўрЃА рЃЌрЃЋрЃљрЃџрЃДрЃБрЃарЃўрЃА рЃЊрЃћрЃЋрЃюрЃћрЃЉрЃљ</li>
      </ul>
    </div>
  </section>

  <script>
    document.getElementById('registerForm')?.addEventListener('submit', (e) => {
      e.preventDefault();
      // TODO: Connect to Firebase Auth
      alert('рЃарЃћрЃњрЃўрЃАрЃбрЃарЃљрЃфрЃўрЃљ рЃЏрЃљрЃџрЃћ рЃњрЃљрЃљрЃЦрЃбрЃўрЃБрЃарЃЊрЃћрЃЉрЃљ! ­Ъџђ');
    });
  </script>
</Layout>
