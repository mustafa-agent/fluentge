---
import Layout from '../layouts/Layout.astro';
---

<Layout title="რეგისტრაცია — FluentGe">
  <section class="px-4 py-20 max-w-md mx-auto">
    <div class="text-center mb-8">
      <h1 class="font-['Playfair_Display',serif] text-3xl mb-3">შექმენი ანგარიში</h1>
      <p class="text-[#6B6B65] text-sm">დარეგისტრირდი და მიიღე წვდომა სრულ კურსზე</p>
    </div>
    <div class="bg-[#242426] border border-[#2E2E30] rounded-2xl p-6 sm:p-8">
      <form id="registerForm" class="space-y-4">
        <div>
          <label class="block text-sm font-medium mb-1.5">სახელი</label>
          <input type="text" name="name" required placeholder="შენი სახელი" class="w-full bg-[#1C1C1E] border border-[#2E2E30] rounded-xl px-4 py-3 text-white placeholder-[#6B6B65] focus:outline-none focus:border-[#C8C8C0] transition-colors text-sm"/>
        </div>
        <div>
          <label class="block text-sm font-medium mb-1.5">ელ. ფოსტა</label>
          <input type="email" name="email" required placeholder="example@gmail.com" class="w-full bg-[#1C1C1E] border border-[#2E2E30] rounded-xl px-4 py-3 text-white placeholder-[#6B6B65] focus:outline-none focus:border-[#C8C8C0] transition-colors text-sm"/>
        </div>
        <div>
          <label class="block text-sm font-medium mb-1.5">პაროლი</label>
          <input type="password" name="password" required placeholder="მინიმუმ 6 სიმბოლო" class="w-full bg-[#1C1C1E] border border-[#2E2E30] rounded-xl px-4 py-3 text-white placeholder-[#6B6B65] focus:outline-none focus:border-[#C8C8C0] transition-colors text-sm"/>
        </div>
        <button type="submit" class="w-full bg-white hover:bg-[#E8E8E0] text-[#1C1C1E] font-bold py-3.5 rounded-xl text-base transition-colors cursor-pointer">რეგისტრაცია</button>
      </form>
    </div>
    <div class="mt-8 bg-[#242426] border border-[#2E2E30] rounded-2xl p-6 sm:p-8 text-center">
      <h2 class="font-bold text-lg mb-4">პრემიუმ კურსი</h2>
      <div class="flex justify-center gap-4 mb-6">
        <div class="bg-[#1C1C1E] rounded-xl p-4 flex-1">
          <div class="text-2xl font-bold text-white">9.99 &#8382;</div>
          <div class="text-[#6B6B65] text-xs">თვეში</div>
        </div>
        <div class="bg-[#1C1C1E] rounded-xl p-4 flex-1 border-2 border-[#C8C8C0]">
          <div class="text-2xl font-bold text-white">79.99 &#8382;</div>
          <div class="text-[#6B6B65] text-xs">წელიწადში</div>
          <div class="text-[#C8C8C0] text-xs font-semibold mt-1">დაზოგე 33%</div>
        </div>
      </div>
      <ul class="text-left text-xs space-y-2 text-[#A0A09A]">
        <li class="flex gap-2"><span class="text-[#C8C8C0]">&check;</span> 2400+ სიტყვა</li>
        <li class="flex gap-2"><span class="text-[#C8C8C0]">&check;</span> 38 გრამატიკა</li>
        <li class="flex gap-2"><span class="text-[#C8C8C0]">&check;</span> 21 პოდკასტი</li>
        <li class="flex gap-2"><span class="text-[#C8C8C0]">&check;</span> 30 თამაში</li>
      </ul>
    </div>
  </section>
  <script>document.getElementById('registerForm')?.addEventListener('submit',(e)=>{e.preventDefault();alert('რეგისტრაცია მალე გააქტიურდება!');});</script>
</Layout>
